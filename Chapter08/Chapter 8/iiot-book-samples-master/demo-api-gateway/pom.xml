        <!--</repository>-->
        <!--<snapshotRepository>-->
        <!--<id>snapshots</id>-->
        <!--<name>snapshots</name>-->
        <!--<url>http://repo.jenkins.build.ge.com:80/artifactory/devops-ci-test</url>-->
        <!--</snapshotRepository>-->
    </distributionManagement>
</project>
